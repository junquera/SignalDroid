<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    android:layout_centerHorizontal="true" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intensidad de la seÃ±al:"
        android:id="@+id/ids"
        android:layout_centerHorizontal="true" />

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:hint="WCDMA"
        android:id="@+id/WCDMA"
        android:layout_below="@id/ids"
        android:paddingLeft="0.2in"/>

    <TextView android:text="" android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/wcdma"
        android:textSize="35dp"
        android:hint="wcma"
        android:numeric="integer"
        android:layout_alignBottom="@id/WCDMA"
        android:layout_toRightOf="@id/WCDMA"
        android:layout_toEndOf="@id/WCDMA" />


    <TextView android:text="" android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:hint="GSM"
        android:id="@+id/GSM"
        android:layout_below="@+id/wcdma"
        android:layout_alignRight="@id/WCDMA" />

    <TextView android:text="" android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:hint="gsm"
        android:numeric="integer"
        android:id="@+id/gsm"
        android:layout_alignBottom="@id/GSM"
        android:layout_alignLeft="@id/wcdma" />



</RelativeLayout>
